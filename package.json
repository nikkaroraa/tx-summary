{
  "name": "tx-summary",
  "version": "1.0.0",
  "description": "Summarize blockchain transactions in plain English",
  "type": "module",
  "bin": {
    "tx-summary": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/cli.ts src/index.ts --format esm --dts --clean",
    "dev": "tsx src/cli.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "ethereum",
    "transaction",
    "blockchain",
    "cli",
    "decoder",
    "summary"
  ],
  "author": "Saumya Tiwari <saumyatiwari.29@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Saumya29/tx-summary.git"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "viem": "^2.45.3"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
